#!/bin/bash
my_dir="$(dirname "$0")"
. "$my_dir/common"

juju-log "ScaleIO GW config changed"

rids=`relation-ids scaleio-openstack`
for rid in $rids ; do
  relation-set -r $rid password=$(config-get password)
  relation-set -r $rid port=$(config-get port)
done

server-cmd "class { 'scaleio::gateway_server': password=>'$password', port=>'$port' }"
